# AkashML API Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env with real credentials to version control!

# Required: Your AkashML API key
# Get your API key from: https://console.akashml.com
AKASHML_API_KEY=

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Optional: Rate limiting (requests per minute, 0 to disable)
RATE_LIMIT_PER_MINUTE=60

# Optional: Trust X-Forwarded-For headers (set true if behind reverse proxy)
TRUST_PROXY_HEADERS=false

# Optional: Cache + chunking
CACHE_TTL_SECONDS=300
CACHE_MAX_ENTRIES=256
CHUNK_SIZE_CHARS=120000

# Security: CORS allowed origins (comma-separated)
# IMPORTANT: In production, always specify exact domains!
# Example: https://yourdomain.com,https://app.yourdomain.com
# WARNING: Wildcard "*" is BLOCKED in production mode (ENVIRONMENT=production)
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
